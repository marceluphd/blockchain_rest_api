{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": false,
    "sourceMap": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "blockchainDB", "types"]
}